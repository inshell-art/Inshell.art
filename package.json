{
  "name": "inshell.art",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "jest",
    "emu": "npm run build && NODE_ENV=emu firebase emulators:start --only hosting",
    "wait:emu": "npx wait-on http://127.0.0.1:5002 && echo Emulator is ready",
    "e2e:emu": "NODE_ENV=emu cypress run --config-file cypress/cypress.config.ts",
    "deploy": "npm run build && firebase deploy --only hosting --token $FIREBASE_TOKEN",
    "deploy:local": "npm run build && firebase deploy --only hosting",
    "wait:staging": "npx wait-on https://inshell-art-staging.web.app && echo Staging is ready",
    "e2e:staging": "NODE_ENV=staging cypress run --config-file cypress/cypress.config.ts",
    "wait:prod": "npx wait-on https://inshell-art-prod.web.app && echo Production is ready",
    "e2e:prod": "NODE_ENV=prod cypress run --config-file cypress/cypress.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/cypress": "^1.1.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cypress": "^13.13.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "picomatch": "^4.0.2",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.1"
  }
}
